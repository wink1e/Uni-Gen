&GLOBAL
        PROJECT U28
        RUN_TYPE GEO_OPT
		PRINT_LEVEL LOW	! donnot need atomic charge
&END GLOBAL
&FORCE_EVAL
        METHOD Quickstep 
        &DFT
            
                BASIS_SET_FILE_NAME BASIS_MOLOPT
                POTENTIAL_FILE_NAME GTH_POTENTIALS
                CHARGE 0
                MULTIPLICITY 1
                &MGRID
                        CUTOFF [Ry] 410
                &END
                &QS
                        METHOD GPW
                        EPS_DEFAULT 1.0E-10
                        EXTRAPOLATION ASPC
                &END
                &POISSON
                        PERIODIC XYZ 
                &END
				
                &SCF
                        SCF_GUESS RESTART
                        MAX_SCF 50
                        EPS_SCF 1.0E-5
						
						&OT T
							MINIMIZER DIIS 
							PRECONDITIONER  FULL_SINGLE
						&END OT
						
                        &OUTER_SCF ! repeat the inner SCF cycle 10 times
                                MAX_SCF 10
                                EPS_SCF 1.0E-5 ! must match the above
                        &END
                        &PRINT
                                &RESTART ON	! store the wfn during MD
                                &END RESTART
                        &END
                &END SCF
				
                &XC
                        &XC_FUNCTIONAL
                                &PBE
                                &END
                        &END XC_FUNCTIONAL
						
                        &VDW_POTENTIAL
                                POTENTIAL_TYPE PAIR_POTENTIAL
                                &PAIR_POTENTIAL
                                        PARAMETER_FILE_NAME dftd3.dat
                                        TYPE DFTD3(BJ)
                                        REFERENCE_FUNCTIONAL PBE
                                        R_CUTOFF [angstrom] 15
                                &END
                        &END VDW_POTENTIAL
                &END XC
        &END DFT
		
		
        &SUBSYS
                &CELL
                        ABC [angstrom] 20.0 20.0 20.0
                &END CELL
                ! atom coordinates can be in the &COORD section,
                ! or provided as an external file.
                &TOPOLOGY
                        COORD_FILE_NAME U28_1.xyz
                        COORD_FILE_FORMAT xyz
			CONN_FILE_FORMAT OFF
                &END
				&KIND O
					BASIS_SET DZVP-MOLOPT-SR-GTH
					POTENTIAL GTH-PBE-q6
					&END KIND
				&KIND Li
					BASIS_SET DZVP-MOLOPT-SR-GTH
					POTENTIAL GTH-PBE-q3
				    &END KIND
				&KIND H
					BASIS_SET DZVP-MOLOPT-SR-GTH
					POTENTIAL GTH-PBE
				    &END KIND
				&KIND U
					BASIS_SET DZVP-MOLOPT-SR-GTH-q14
					POTENTIAL GTH-PBE-q14
				&END KIND
				&KIND K
					BASIS_SET DZVP-MOLOPT-SR-GTH-q9
					POTENTIAL GTH-PBE-q9
				&END KIND

        &END SUBSYS
		
		STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL

&MOTION
&GEO_OPT
    MAX_ITER 200
    OPTIMIZER BFGS
    &BFGS
	TRUST_RADIUS 0.05
    &END BFGS
&END GEO_OPT
&PRINT
		&TRAJECTORY       
			FORMAT XMOL	! the format of the pos file is XMOL(=XYZ).	Other options: DCD
            &EACH
                GEO_OPT 1	! write information into pos file every 1 step
            &END EACH
        &END TRAJECTORY
		&CELL ON
		&END CELL
        &RESTART_HISTORY  OFF
        &END RESTART_HISTORY
        &RESTART                      
            BACKUP_COPIES 0	! donnot store restart.bak file 
            &EACH
                GEO_OPT 1	! save restart file every 1 step
            &END EACH
        &END RESTART
&END PRINT
&END



